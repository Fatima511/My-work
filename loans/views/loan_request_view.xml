<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="loan_request_view_tree" model="ir.ui.view">
        <field name="name">loan.request.view.list</field>
        <field name="model">loan.request</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <list string="Loan Request">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="tenure"/>
                <field name="company_id"/>
                <field name="state" widget="badge" decoration-info="state in ['draft', 'confirmed']"
                       decoration-success="state in ['approved']" decoration-danger="state == 'rejected'"
                       decoration-warning="state == 'waiting'"
                       decoration-muted="state == 'closed'"/>
            </list>
        </field>
    </record>
    <record id="loan_request_view_form" model="ir.ui.view">
        <field name="name">loan.request.view.form</field>
        <field name="model">loan.request</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Loan Request">
                <header>
                     <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,waiting,approved" />
                        <button string="Confirm" invisible="state != 'draft'" class="btn-primary"
                                type="object" name="action_confirm"/>
                        <button string="To Approve" invisible="state != 'confirmed'" class="btn-primary"
                                type="object" name="action_waiting_approval"/>
                        <button string="Approve" invisible="state != 'waiting'" class="btn-primary"
                                type="object" name="action_approved"/>
                        <button string="Reject" invisible="state != 'waiting'" class="btn-secondary"
                                type="object" name="action_reject"/>
                        <button string="Prepayment Calculate" invisible="state != 'confirmed'" class="btn-secondary"
                                type="object" name="action_do_prepayment"/>
                        <button string="Disburse Loan" invisible="state != 'approved'" class="btn-primary"
                                type="object" name="action_disbursed"/>
                        <button string="Close" invisible="state != 'disbursed'" class="btn-primary"
                                type="object" name="action_close_loan"/>
                </header>

                <sheet>
                        <h1>
                            <field name="name" style="width: 50%%;"
                                   placeholder="Loan Type"/>
                        </h1>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="loan_type_id"
                                   />
                        </group>
                        <group>
                            <field name="tenure"
                                   />
                            <field name="disbursal_amount"/>
                            <field name="currency_id"/>
                            <field name="date"/>
                            <field name="request" invisible="1"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prepayments" invisible="state  in ['draft']">
                                <field name="prepayment_lines" readonly="1"/>
                        </page>
                        <page string="Documents">
                            <group>
                                <field name="document_ids"
                                       widget="many2many_tags"/>
                                <field name="attachment_ids"
                                       widget="many2many_binary"/>
                            </group>
                        </page>
                        <page string="Loan rejection"  invisible="state not in ['rejected']">
                            <group>
                                <field name="rejection_reason" readonly="1"/>
                            </group>
                        </page>
                        <page string="Accounting"
                              >
                            <group>
                                <group>
                                    <field name="journal_id"
                                          required="state == 'approved'" />
                                </group>
                                <group>
                                    <field name="debit_account_id"
                                          required="state == 'approved'"/>
                                    <field name="credit_account_id"
                                           required="state == 'approved'"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="loan_request_action" model="ir.actions.act_window">
        <field name="name">Loan Request</field>
        <field name="res_model">loan.request</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="loan_request" name="Loans" sequence="1"
                  parent="loan_management_menu_root"/>
    <menuitem id="loan_management" name="Loan Request" sequence="1"
                  parent="loan_request" action="loan_request_action"/>
</odoo>
