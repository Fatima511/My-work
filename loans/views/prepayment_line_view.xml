<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="prepayment_lines_view_tree" model="ir.ui.view">
        <field name="name">prepayment.line.view.list</field>
        <field name="model">loan.prepayment.line</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <list string="Loan Prepayment" create="0" delete="0">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="loan_id"/>
                <field name="date"/>
                <field name="amount"/>
                <field name="company_id"/>
                <field name="state" widget="badge" decoration-success="state == 'paid'" decoration-danger="state == 'unpaid'"/>
            </list>
        </field>
    </record>
    <record id="prepayment_lines_view_form" model="ir.ui.view">
        <field name="name">prepayment.lines.view.form</field>
        <field name="model">loan.prepayment.line</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Prepayment Line">
                <header>
                     <field name="state" widget="statusbar"
                            statusbar_visible="unpaid,invoiced,paid" />
                        <button string="Pay" invisible="state != 'unpaid'" class="btn-primary"
                                type="object" name="action_pay"/>

                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box" invisible="not invoice">
                            <button class="oe_stat_button" name="view_invoice"
                                    type="object" icon="fa-bars">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">
                                        Invoice
                                    </span>
                                </div>
                            </button>
                    </div>
                        <h1>
                            <field name="name" style="width: 50%%;"
                                   placeholder="Prepayment Name"/>
                        </h1>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="loan_id" readonly="1"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="amount" readonly="1"/>
                            <field name="invoice"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Accounting">
                            <group>
                                <field name="journal_id" readonly="1"/>
                                <field name="prepayment_account" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="prepayment_lines_action" model="ir.actions.act_window">
        <field name="name">Prepayment Lines</field>
        <field name="res_model">loan.prepayment.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="loan_prepayment" name="Prepayments"
                  parent="loan_management_menu_root" />
    <menuitem id="loan_prepayment_item" name="Prepayments"
                  parent="loan_request" action="prepayment_lines_action" />
</odoo>
