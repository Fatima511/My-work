<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loan_type_view_tree" model="ir.ui.view">
        <field name="name">loan.type.view.list</field>
        <field name="model">loan.type</field>
        <field name="arch" type="xml">
            <list string="Loan Type">
                <field name="name" />
                <field name="amount" />
                <field name="processing_fees" />
            </list>
        </field>
    </record>

      <record id="loan_type_view_kanban" model="ir.ui.view">
        <field name="name">loan.type.view.kanban</field>
        <field name="model">loan.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="amount"/>
                <field name="tenure"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_header d-flex justify-content-between align-items-center mb-2">
                                <strong class="o_kanban_record_title text-primary">
                                    <i class="fa fa-credit-card"></i>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_details">
                                <div>
                                    <i class="fa fa-money-bill"></i>
                                    <strong>Amount:</strong>
                                    <span class="text-success">
                                        <t t-esc="record.amount.raw_value"/>
                                    </span>
                                </div>
                                <div>
                                    <i class="fa fa-clock"></i>
                                    <strong>Tenure:</strong>
                                    <span><t t-esc="record.tenure.raw_value"/> months</span>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
        </record>


    <record id="loan_type_view_form" model="ir.ui.view">
        <field name="name">loan.type.form</field>
        <field name="model">loan.type</field>
        <field name="arch" type="xml">
            <form string="Loan Types">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="amount"/>
                        <field name="tenure"/>
                        <field name="document_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="processing_fees"/>
                        <field name="disbursal_amount"/>
                        <field name="company_id"/>

                    </group>
                    <notebook>
                        <page string="Criteria">
                                <field name="criteria"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
     </record>
    <record id="loan_type_action" model="ir.actions.act_window">
        <field name="name">Loan Types</field>
        <field name="res_model">loan.type</field>
        <field name="view_mode">list,kanban,form</field>

    </record>
        <menuitem id="loan_type" name="Loan Types" sequence="2"
                  parent="loan_request" action="loan_type_action"/>

</odoo>
