<odoo>
    <record id="view_reject_loan_wizard_form" model="ir.ui.view">
        <field name="name">reject.reason.wizard.form</field>
        <field name="model">reject.loan.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="reject_reason"/>
                    </group>
                    <footer>
                        <button string="Reject" type="object" class="btn-primary" name="action_reject_loan"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
