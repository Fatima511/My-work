<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="purchase_order_modification" model="ir.ui.view">
            <field name="name">purchase.order.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                        <field name="saleperson"/>
                </xpath>
                <button name="button_approve" position="after">
                    <button name="button_approve" type="object" invisible="state not in 'approval'" string="Approve Order" class="oe_highlight" groups="purchase_custom.group_purchase_head"/>
                </button>

                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="before">
                    <field name="sequence_number"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="before">
                    <field name="image_128" widget="image"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='price_subtotal']" position="after">
                    <button name="copy_line" type="object"  string="Copy" icon="fa-copy" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='product_qty']" position="after">
                    <field name="last_purchase_price"/>
                </xpath>
                <!--  Add Total Units Counter to Purchase Orders-->

                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="total_quantity"/>
                </xpath>


                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="responsible_user"/>
                </xpath>

            </field>
        </record>

    <record id="res_company_modification" model="ir.ui.view">
            <field name="name">res.company.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <div class="row">
                        <div class="col-md-12">
                            <group>
                                <field name="secondary_amount"/>
                            </group>

                        </div>
                    </div>
                </xpath>
                <xpath expr="//field[@name='website']" position="after">
                   <field name="default_terms"/>
                </xpath>
            </field>
        </record>

    <!--  Restrict Vendor Information Access in Products-->
     <record id="product_vendor_restriction" model="ir.ui.view">
            <field name="name">restrict.vendor.list</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='seller_ids']" position="attributes">
                    <attribute name="groups">purchase_custom.group_show_vendors_restrict</attribute>
                </xpath>
                <xpath expr="//field[@name='variant_seller_ids']" position="attributes">
                    <attribute name="groups">purchase_custom.group_show_vendors_restrict</attribute>
                </xpath>
            </field>
        </record>




</odoo>
