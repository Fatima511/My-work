<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_order_report_inheritance" inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//th[@name='th_description']" position="before">
        <th name="th_order_sequence"><strong>#</strong></th>
    </xpath>
    <xpath expr="//th[@name='th_description']" position="before">
         <th name="th_order_image"><strong>image</strong></th>
    </xpath>
        <xpath expr="//tbody//tr//td" position="before">
                <td name="td_sequence">
                    <span t-esc="line.sequence_number"/>
                </td>
            </xpath>
            <xpath expr="//tbody//tr//td[2]" position="before">
                <td name="td_image_128">
                    <t t-if="line.product_id.image_128">
                        <img t-att-src="'data:image/png;base64,' + line.product_id.image_128.decode('utf-8')"
                             alt="Product Image" style="width: 128px; height: 128px;"/>
                    </t>
                    <t t-else="">
                        <span>No Image</span>
                    </t>
                </td>
            </xpath>
        <xpath expr="//div[hasclass('page')]" position="inside">
            <div>
                <t t-set="counter" t-value="o.add_count()"/>
                    <t t-if="o.printing_counter">
                        Printed:
                        <span t-field="o.printing_counter"/> time
                    </t>
            </div>
                </xpath>



        </template>
       <template id="purchase_quotation_report_inheritance" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//table[hasclass('table')]//tr//th[@name='th_description']"
                   position="before">
                <th name="th_sequence" class="text-start">#</th>
            </xpath>
            <xpath expr="//tbody//tr//td"
                   position="before">
                <td name="td_sequence">
                    <span t-esc="order_line.sequence_number"/>
                </td>
            </xpath>

   </template>

</odoo>
